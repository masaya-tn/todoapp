.card
  = link_to board_task_path(board_id: @board.id, id: task.id), class: "text-decoration" do
    .card_content
      - if task.eyecatch.attached?
        .card_image
          = image_tag task.eyecatch, class: 'eyecatch'
    .card_title
      = task.title
    .card_content
      = task.content
    
    = image_tag task.user.avatar_image, class: 'avatar_image_index'

    - if user_signed_in? && current_user.tasks.exists?(id: task.id)
      .dropdown
        = image_tag 'actions.svg', class: 'dropbtn'
        .dropdown-content.mini
          = link_to '編集する',  edit_board_task_path(board_id: @board.id, id: task.id)
          = link_to '削除する',  board_task_path(board_id: @board.id, id: task.id), data: { method: 'delete', confirm: '本当に削除してもよろしいですか'}
        
        
      